1. 

CREATE TABLE PRODUCT

(

NO NUMBER PRIMARY KEY,

NAME VARCHAR2(100) NOT NULL,

PRICE NUMBER,

P_DATE DATE

);

 

2.

CREATE SEQUENCE PRODUCT_SEQ

INCREMENT BY 1

START WITH 1000

NOMAXVALUE

NOMINVALUE

NOCYCLE

NOCACHE;

